<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity"
    android:background="@drawable/gradient">

    <android.support.v7.widget.CardView
        android:id="@+id/CardView1"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:rotation="45"
        app:cardBackgroundColor="#050ccf">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:rotation="315"
            android:src="@drawable/caln" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CardView2"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/CardView6"
        android:rotation="45"
        app:cardBackgroundColor="#1431d4">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:rotation="315"
            android:src="@drawable/time" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CardView3"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_centerInParent="true"
        android:rotation="45"
        app:cardBackgroundColor="#0184ff">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:rotation="315"
            android:src="@drawable/fac" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CardView4"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/CardView7"
        android:rotation="45"
        android:layout_marginBottom="192dp"
        app:cardBackgroundColor="#4193d2">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:rotation="315"
            android:src="@drawable/cal" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/CardView6"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="192dp"
        android:rotation="45"
        app:cardBackgroundColor="#2b59f7">

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:rotation="315"
            android:src="@drawable/scalpen" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CardView5"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:rotation="45"
        app:cardBackgroundColor="#03b1fc">

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:rotation="315"
            android:src="@drawable/upload" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/CardView7"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="192dp"
        android:rotation="45"
        app:cardBackgroundColor="#039cde">

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:rotation="315"
            android:src="@drawable/cn"></ImageView>

    </android.support.v7.widget.CardView>

</RelativeLayout>
